<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
	<table>
	<tablerow/>
		<label text="Extruder:" font="('Fixed',12)"/>
		<number halpin="extruder-temp" width="5" font="('Fixed',12)"/>
		<number halpin="extruder-temp-out" width="5" font="('Fixed',12)"/>
		<button>
			<halpin>"off-extruder"</halpin>
			<text>"OFF"</text>
		</button>
	<tablerow/>
		<label text="Bed:" font="('Fixed',12)"/>
		<number halpin="bed-temp" width="5" font="('Fixed',12)"/>
		<number halpin="bed-temp-out" width="5" font="('Fixed',12)"/>
		<button>
			<halpin>"off-bed"</halpin>
			<text>"OFF"</text>
		</button>
	<tablerow/>
		<label text="FAN:" font="('Fixed',12)"/>
		<label text=" " font="('Fixed',12)"/>
		<number halpin="fan-out" width="5" font="('Fixed',12)"/>
		<button>
			<halpin>"off-fan"</halpin>
			<text>"OFF"</text>
		</button>
        </table>
	<table>
	<tablerow/>
		<label text="SERIAL STATUS: " font="('Fixed',12)"/>
		<led>
			<halpin>"fail"</halpin> 
			<size>20</size> 
			<on_color>"red"</on_color>
			<off_color>"green"</off_color>
		</led>
        </table>
	<labelframe text="Zero Axes">
		<button>
		<halpin>"zero-x-y"</halpin>
		<text>"X-Y Zero"</text>
		<font>('Fixed',12)</font>
		</button>

		<button>
		<halpin>"zero-z"</halpin>
		<text>"Z-Axis Zero"</text>
		<font>('Fixed',12)</font>
		</button>

		<button>
		<halpin>"zero-a"</halpin>
		<text>"Extruder Zero"</text>
		<font>('Fixed',12)</font>
		</button>

	</labelframe>
	<labelframe text="Calibration">
		<button>
		<halpin>"z-axis-touchoff"</halpin>
		<text>"Touch Off Z"</text>
		<font>('Fixed',12)</font>
		</button>

		<button>
		<halpin>"measure-mesh"</halpin>
		<text>"Measure Mesh"</text>
		<font>('Fixed',12)</font>
		</button>
	</labelframe>
	<labelframe text="Z Correction">
		<checkbutton>
		<halpin>"enable-z-correct"</halpin>
		<text>"Enable Z Correction"</text>
		<font>('Fixed',12)</font>
		</checkbutton>
		<number halpin="delta-z" width="5" font="('Fixed',12)"/>
	</labelframe>
</pyvcp>
